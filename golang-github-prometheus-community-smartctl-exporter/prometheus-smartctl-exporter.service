[Unit]
Description=Prometheus exporter for smartctl statistics
Documentation=https://github.com/prometheus-community/smartctl_exporter
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=prometheus
EnvironmentFile=/etc/default/prometheus-smartctl-exporter
ExecStart=/usr/bin/prometheus-smartctl-exporter $ARGS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
